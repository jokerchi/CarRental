<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.example.carrental.dao.ExcitingActivitiesDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="org.example.carrental.entity.ExcitingActivitiesEntity" id="excitingActivitiesMap">
        <result property="title" column="title"/>
        <result property="introduction" column="introduction"/>
        <result property="picture" column="picture"/>
        <result property="content" column="content"/>
    </resultMap>

    <select id="selectListVO"
            resultType="org.example.carrental.entity.vo.ExcitingActivitiesVO" >
        SELECT * FROM excitingactivities
        <where> 1=1 ${ew.sqlSegment}</where>
    </select>

    <select id="selectVO"
            resultType="org.example.carrental.entity.vo.ExcitingActivitiesVO" >
        SELECT  excitingactivities.* FROM excitingactivities
        <where> 1=1 ${ew.sqlSegment}</where>
    </select>

    <select id="selectListView"
            resultType="org.example.carrental.entity.view.ExcitingActivitiesView" >

        SELECT  excitingactivities.* FROM excitingactivities
        <where> 1=1 ${ew.sqlSegment}</where>
        <if test="page != null">
            LIMIT #{page.offset}, #{page.limit}
        </if>
    </select>

    <select id="selectPageListView"
            resultType="org.example.carrental.entity.view.ExcitingActivitiesView" >
        SELECT  excitingactivities.* FROM excitingactivities
        <where> 1=1 ${ew.sqlSegment}</where>
<!--        <if test="page != null">-->
<!--            LIMIT #{page.offset}, #{page.limit}-->
<!--        </if>-->
    </select>

    <select id="selectView"
            resultType="org.example.carrental.entity.view.ExcitingActivitiesView" >
        SELECT * FROM excitingactivities <where> 1=1 ${ew.sqlSegment}</where>
    </select>

</mapper>